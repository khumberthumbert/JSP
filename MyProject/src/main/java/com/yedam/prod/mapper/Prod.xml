<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.prod.mapper.ProductMapper">
	<select id="getProduct" resultType="prod">
	  select * from tbl_product
	</select>
	<select id="getProd" resultType="prod">
		select * from tbl_product order by
		product_code
	</select>
	<insert id="addProd" parameterType="prod">
		insert into tbl_product
		values (#{prodCode}, #{prodName}, #{productExpl}, #{productPrice}, #{productSale}, #{productGrade},#{attachFile})
	</insert>
	<delete id="delProd" parameterType="int">
		delete from tbl_product where
		product_code = #{prodCode}
	</delete>
</mapper>